include README.md
include LICENSE
include requirements.txt
include config.ini

# Include all configuration files
recursive-include config *

# Include example files and documentation
recursive-include docs *
recursive-include examples *

# Include model directory structure but not the models themselves
recursive-include models .gitkeep

# Include log directory structure
recursive-include logs .gitkeep

# Exclude development and test files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude *.egg
global-exclude *.log 